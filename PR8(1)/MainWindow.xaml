<Window x:Class="PR8_1_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Электронный Университет" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Цветовая палитра -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="AccentColor" Color="#E74C3C"/>
        <SolidColorBrush x:Key="LightColor" Color="#ECF0F1"/>
        <SolidColorBrush x:Key="TextColor" Color="#2C3E50"/>

        <!-- Стили -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковое меню -->
        <Border Grid.Column="0" Background="{StaticResource PrimaryColor}">
            <DockPanel>
                <!-- Логотип -->
                <Border DockPanel.Dock="Top" Background="#1A252F" Height="80" 
                        Padding="20">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="C:\Users\ddv270208\Downloads\UbuntuCoF.svg.png" />
                        <TextBlock Text="Универ" Foreground="White" FontSize="18" 
                                   FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Меню навигации -->
                <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Button Content="🏠 Главная" Style="{StaticResource MenuButtonStyle}" 
                                Tag="Home" Click="MenuButton_Click"/>
                        <Button Content="📅 Расписание" Style="{StaticResource MenuButtonStyle}" 
                                Tag="Schedule" Click="MenuButton_Click"/>
                        <Button Content="📚 Курсы" Style="{StaticResource MenuButtonStyle}" 
                                Tag="Courses" Click="MenuButton_Click"/>
                        <Button Content="📖 Материалы" Style="{StaticResource MenuButtonStyle}" 
                                Tag="Materials" Click="MenuButton_Click"/>
                        <Button Content="📊 Оценки" Style="{StaticResource MenuButtonStyle}" 
                                Tag="Grades" Click="MenuButton_Click"/>
                        <Button Content="💬 Сообщения" Style="{StaticResource MenuButtonStyle}" 
                                Tag="Messages" Click="MenuButton_Click"/>
                        <Button Content="🎯 Мероприятия" Style="{StaticResource MenuButtonStyle}" 
                                Tag="Events" Click="MenuButton_Click"/>
                        <Button Content="👤 Профиль" Style="{StaticResource MenuButtonStyle}" 
                                Tag="Profile" Click="MenuButton_Click"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Профиль пользователя -->
                <Border DockPanel.Dock="Bottom" Background="#1A252F" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Иван Петров" Foreground="White" FontWeight="SemiBold" x:Name="StudentName"/>
                        <TextBlock Text="Студент, ИВТ-21" Foreground="#BDC3C7" FontSize="12" x:Name="StudentGroup"/>
                        <TextBlock Text="" Foreground="#BDC3C7" FontSize="12"/>
                        <Button Content="Выйти" 
                            Background="Transparent" 
                            BorderBrush="#3498DB" BorderThickness="1"
                            Foreground="#3498DB" Padding="10,5"
                            Click="Button_Click_1"  Width="80" Height="30" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
            </DockPanel>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель -->
            <Border Grid.Row="0" Background="{StaticResource LightColor}" 
                    Padding="20,15" BorderBrush="#DDD" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Поисковая строка -->
                    <Border Background="White" CornerRadius="20" Padding="15,8" 
                            BorderBrush="#DDD" BorderThickness="1" Width="400"
                            HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="🔍" VerticalAlignment="Center" Margin="0,0,10,0" Click="Button_Click_2" Background="White" BorderBrush="White"/>
                            <TextBox Text="Поиск курсов, материалов..." BorderThickness="0" 
                                   Background="Transparent" Width="300" FontSize="14"/>
                        </StackPanel>
                    </Border>

                    <!-- Уведомления и действия -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="🔔" FontSize="16" Background="Transparent" 
                                BorderThickness="0" Margin="0,0,10,0" Width="40" Click="Button_Click"/>
                        <Button Content="⚙️" FontSize="16" Background="Transparent" 
                                BorderThickness="0" Width="40" Click="Button_Click_2"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Контент страниц -->
            <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden" 
                   Background="White"/>

            <!-- Нижняя навигационная панель -->
            <Border Grid.Row="2" Background="{StaticResource PrimaryColor}" 
                    Padding="10" BorderBrush="#DDD" BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>
       