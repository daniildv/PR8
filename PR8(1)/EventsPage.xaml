<Page x:Class="PR8_1_.EventsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Мероприятия">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="🎯 Мероприятия и курсы" 
                   FontSize="24" FontWeight="Bold" 
                   Foreground="#2C3E50" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Список мероприятий -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" 
                          Margin="0,0,20,0">
                <StackPanel>
                    <!-- Предстоящие мероприятия -->
                    <Border  Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="📅 Предстоящие мероприятия" 
                                       FontSize="18" FontWeight="SemiBold" 
                                       Foreground="#2C3E50" Margin="0,0,0,15"/>

                            <StackPanel>
                                <!-- Мероприятие 1 -->
                                <Border Background="#E8F4FD" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Хакатон по веб-разработке" 
                                                       FontWeight="SemiBold" FontSize="16"/>
                                            <TextBlock Text="15-16 декабря, 10:00 - Главный корпус" 
                                                       Foreground="#666" Margin="0,5,0,0"/>
                                            <TextBlock Text="Примите участие в 48-часовом марафоне по созданию веб-приложений" 
                                                       Foreground="#666" FontSize="12" TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <Button x:Name="UnEnrolledState" Grid.Column="1" Content="Записаться" 
                                                Background="#3498DB" Foreground="White"
                                                BorderThickness="0" Padding="15,8"
                                                FontWeight="SemiBold"
                                                VerticalAlignment="Center" Click="Button_Click_1" Width="100" Height="30"/>
                                        <StackPanel x:Name="EnrolledState" Visibility="Collapsed"
                                                    Grid.Column="1" Background="#3498DB" 
                                                    Width="100" Height="30">
                                            <Label 
                                                Foreground="White"
                                                BorderThickness="0" Padding="15,8"
                                                FontWeight="SemiBold">Ты записан.</Label>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Мероприятие 2 -->
                                <Border Background="#E8F6F3" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Лекция: Искусственный интеллект" 
                                                       FontWeight="SemiBold" FontSize="16"/>
                                            <TextBlock Text="18 декабря, 14:00 - Ауд. 501" 
                                                       Foreground="#666" Margin="0,5,0,0"/>
                                            <TextBlock Text="Приглашенный спикер из IT-компании расскажет о современных трендах AI" 
                                                       Foreground="#666" FontSize="12" TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <Button x:Name="UnEnrolledState2" Grid.Column="1" Content="Записаться" 
                                                Background="#27AE60" Foreground="White"
                                                BorderThickness="0" Padding="15,8"
                                                FontWeight="SemiBold"
                                                VerticalAlignment="Center" Click="Button_Click_2" Width="100" Height="30"/>
                                        <StackPanel x:Name="EnrolledState2" Visibility="Collapsed"
                                            Grid.Column="1" Background="#27AE60" 
                                            Width="100" Height="30">
                                            <Label 
                                            Foreground="White"
                                            BorderThickness="0" Padding="15,8"
                                            FontWeight="SemiBold">Ты записан.</Label>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Дополнительные курсы -->
                    <Border  Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="🎓 Дополнительные курсы" 
                                       FontSize="18" FontWeight="SemiBold" 
                                       Foreground="#2C3E50" Margin="0,0,0,15"/>

                            <WrapPanel>
                                <!-- Курс 1 -->
                                <Border  Width="280" Height="180" Margin="0,0,15,15">
                                    <StackPanel>
                                        <Border Background="#9B59B6" CornerRadius="5" 
                                                Height="40" Margin="-15,-15,-15,15" Width="280">
                                            <TextBlock Text="UI/UX Design" Foreground="White" 
                                                       FontWeight="Bold" FontSize="14"
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <TextBlock Text="Основы дизайна интерфейсов" 
                                                   FontWeight="SemiBold" TextWrapping="Wrap"
                                                   Margin="0,0,0,5"/>
                                        <TextBlock Text="8 недель • 2 часа/неделю" 
                                                   Foreground="#666" FontSize="11"
                                                   Margin="0,0,0,10"/>

                                        <Button x:Name="UnEnrolledState3" Content="Записаться" Background="#9B59B6" 
                                                Foreground="White" BorderThickness="0"
                                                Padding="10,5" 
                                                FontSize="12" FontWeight="SemiBold" Click="Button_Click_3" Width="280" Height="28"/>
                                        <StackPanel x:Name="EnrolledState3" Visibility="Collapsed"
                                            Grid.Column="1" Background="#9B59B6" 
                                            Width="280" Height="28">
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Foreground="White"
                                            BorderThickness="0" Padding="15,8"
                                            FontWeight="SemiBold">Ты записан.</Label>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                <Border  Width="280" Height="180" Margin="0,0,15,15">
                                    <StackPanel>
                                        <Border Background="#E67E22" CornerRadius="5" 
                                                Height="40" Margin="-15,-15,-15,15" Width="280">
                                            <TextBlock Text="Data Science" Foreground="White" 
                                                       FontWeight="Bold" FontSize="14"
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <TextBlock Text="Введение в анализ данных" 
                                                   FontWeight="SemiBold" TextWrapping="Wrap"
                                                   Margin="0,0,0,5"/>
                                        <TextBlock Text="10 недель • 3 часа/неделю" 
                                                   Foreground="#666" FontSize="11"
                                                   Margin="0,0,0,10"/>

                                        <Button x:Name="UnEnrolledState4" Content="Записаться" Background="#E67E22" 
                                                Foreground="White" BorderThickness="0"
                                                Padding="10,5" 
                                                FontSize="12" FontWeight="SemiBold" Click="Button_Click_4" Height="28"/>
                                        <StackPanel x:Name="EnrolledState4" Visibility="Collapsed"
                                            Grid.Column="1" Background="#E67E22" 
                                            Width="280" Height="28">
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Foreground="White"
                                            BorderThickness="0" Padding="15,8"
                                            FontWeight="SemiBold" Content="Ты записан."/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Курс 2 -->
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Боковая панель -->
            <StackPanel Grid.Column="1">
                <!-- Мои записи -->
                <Border  Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="📋 Мои записи" 
                                   FontSize="16" FontWeight="SemiBold" 
                                   Margin="0,0,0,10"/>

                        <StackPanel>
                            <TextBlock Text="✅ Хакатон по веб-разработке" 
                                       FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock Text="15-16 декабря" FontSize="11" 
                                       Foreground="#666" Margin="0,0,0,10"/>

                            <TextBlock Text="✅ Лекция по AI" FontSize="12" 
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="18 декабря" FontSize="11" 
                                       Foreground="#666" Margin="0,0,0,10"/>

                            <Button Content="Управление записями" 
                                    Background="Transparent" 
                                    BorderBrush="#3498DB" BorderThickness="1"
                                    Foreground="#3498DB" Padding="10,5"
                                    FontSize="12"
                                    HorizontalAlignment="Left" Click="Button_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Календарь -->
                <Border>
                    <StackPanel>
                        <TextBlock Text="📅 Календарь" 
                                   FontSize="16" FontWeight="SemiBold" 
                                   Margin="0,0,0,10"/>

                        <Border Background="#F8F9FA" CornerRadius="5" Padding="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Декабрь 2023" FontWeight="SemiBold" 
                                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                                <TextBlock Grid.Row="1" Text="15-16" FontSize="12" 
                                           Foreground="#3498DB" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="2" Text="Хакатон" FontSize="10" 
                                           TextWrapping="Wrap"/>

                                <Rectangle Grid.Row="3" Height="1" Fill="#EEE" Margin="0,5"/>

                                <TextBlock Grid.Row="4" Text="18" FontSize="12" 
                                           Foreground="#27AE60" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="5" Text="Лекция AI" FontSize="10" 
                                           TextWrapping="Wrap"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page>