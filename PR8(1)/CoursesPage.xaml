<Page x:Class="PR8_1_.CoursesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Курсы">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="📚 Мои курсы" 
                   FontSize="24" FontWeight="Bold" 
                   Foreground="#2C3E50" Margin="0,0,0,20"/>

        <!-- Список курсов -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel>
                <!-- Курс 1 -->
                <Border x:Name="Course1Border"  Width="300" Height="200" Margin="0,0,15,15">
                    <StackPanel>
                        <Border x:Name="Course1Header" Background="#3498DB" CornerRadius="5" 
                                Height="60" Margin="-15,-15,-15,15">
                            <TextBlock x:Name="Course1Code" Text="МАТ" Foreground="White" 
                                       FontSize="24" FontWeight="Bold"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock x:Name="Course1Title" Text="Математический анализ" 
                                   FontWeight="SemiBold" FontSize="16"
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                        <TextBlock x:Name="Course1Teacher" Text="Проф. Иванов А.В." 
                                   Foreground="#666" FontSize="12" Margin="0,0,0,10"/>

                        <ProgressBar x:Name="Course1Progress" Value="75" Height="8" Margin="0,0,0,10"
                                   Background="#E9ECEF" Foreground="#3498DB"/>

                        <TextBlock x:Name="Course1ProgressText" Text="75% завершено" FontSize="11" 
                                   Foreground="#666" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Курс 2 -->
                <Border x:Name="Course2Border"  Width="300" Height="200" Margin="0,0,15,15">
                    <StackPanel>
                        <Border x:Name="Course2Header" Background="#27AE60" CornerRadius="5" 
                                Height="60" Margin="-15,-15,-15,15">
                            <TextBlock x:Name="Course2Code" Text="ПРОГ" Foreground="White" 
                                       FontSize="24" FontWeight="Bold"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock x:Name="Course2Title" Text="Программирование на C#" 
                                   FontWeight="SemiBold" FontSize="16"
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                        <TextBlock x:Name="Course2Teacher" Text="Доц. Петрова Е.С." 
                                   Foreground="#666" FontSize="12" Margin="0,0,0,10"/>

                        <ProgressBar x:Name="Course2Progress" Value="90" Height="8" Margin="0,0,0,10"
                                   Background="#E9ECEF" Foreground="#27AE60"/>

                        <TextBlock x:Name="Course2ProgressText" Text="90% завершено" FontSize="11" 
                                   Foreground="#666" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Курс 3 -->
                <Border x:Name="Course3Border"  Width="300" Height="200" Margin="0,0,15,15">
                    <StackPanel>
                        <Border x:Name="Course3Header" Background="#E74C3C" CornerRadius="5" 
                                Height="60" Margin="-15,-15,-15,15">
                            <TextBlock x:Name="Course3Code" Text="БД" Foreground="White" 
                                       FontSize="24" FontWeight="Bold"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock x:Name="Course3Title" Text="Базы данных" 
                                   FontWeight="SemiBold" FontSize="16"
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                        <TextBlock x:Name="Course3Teacher" Text="Проф. Сидоров П.К." 
                                   Foreground="#666" FontSize="12" Margin="0,0,0,10"/>

                        <ProgressBar x:Name="Course3Progress" Value="60" Height="8" Margin="0,0,0,10"
                                   Background="#E9ECEF" Foreground="#E74C3C"/>

                        <TextBlock x:Name="Course3ProgressText" Text="60% завершено" FontSize="11" 
                                   Foreground="#666" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Дополнительные курсы -->
                <Border x:Name="AdditionalCourseBorder"  Width="300" Height="200" Margin="0,0,0,15">
                    <StackPanel>
                        <Border x:Name="AdditionalCourseHeader" Background="#9B59B6" CornerRadius="5" 
                                Height="60" Margin="-15,-15,-15,15">
                            <TextBlock x:Name="AdditionalCourseCode" Text="ВЕБ" Foreground="White" 
                                       FontSize="24" FontWeight="Bold"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock x:Name="AdditionalCourseTitle" Text="Веб-разработка" 
                                   FontWeight="SemiBold" FontSize="16"
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                        <TextBlock x:Name="AdditionalCourseDesc" Text="Дополнительный курс" 
                                   Foreground="#666" FontSize="12" Margin="0,0,0,10"/>

                        <!-- Состояние незаписанного курса -->
                        <StackPanel x:Name="UnenrolledState">
                            <Button Content="Записаться" Background="#9B59B6" 
                                    Foreground="White" BorderThickness="0"
                                    Padding="15,8"  FontWeight="SemiBold"
                                    Click="EnrollButton_Click"/>
                        </StackPanel>

                        <!-- Состояние записанного курса (изначально скрыто) -->
                        <StackPanel x:Name="EnrolledState" Visibility="Collapsed">
                            <ProgressBar x:Name="AdditionalCourseProgress" Value="0" Height="8" Margin="0,0,0,10"
                                       Background="#E9ECEF" Foreground="#9B59B6"/>
                            <TextBlock x:Name="AdditionalCourseProgressText" Text="0% завершено" FontSize="11" 
                                       Foreground="#666" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>