<Window x:Class="PR8_1_.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="Transparent"
        WindowStyle="None"
        >
        
    <Border Background="White" BorderBrush="#FF007ACC" BorderThickness="1" Padding="20">
        <StackPanel>
            <!-- Заголовок -->
            <TextBlock x:Name="TitleText" Text="Title" Foreground="Black" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Сообщение -->
            <TextBlock x:Name="MessageText" Text="Message" Foreground="Gray" TextWrapping="Wrap" MaxWidth="400" Margin="0,0,0,20"/>

            <!-- Кнопки -->
            <StackPanel x:Name="ButtonsPanel" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="YesButton" Content="Yes" Click="Button_Click" Margin="5" Padding="10,5" Background="#FF0E639C" Foreground="White"/>
                <Button x:Name="NoButton" Content="No" Click="Button_Click" Margin="5" Padding="10,5" Background="#FF0E639C" Foreground="White"/>
                <Button x:Name="OKButton" Content="OK" Click="Button_Click" Margin="5" Padding="10,5" Background="#FF0E639C" Foreground="White"/>
                <Button x:Name="CancelButton" Content="Cancel" Click="Button_Click" Margin="5" Padding="10,5" Background="#FF0E639C" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>