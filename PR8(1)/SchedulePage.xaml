<Page x:Class="PR8_1_.SchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Расписание">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и фильтры -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" 
                     Margin="0,0,0,20">
            <TextBlock x:Name="ScheduleTitle" Text="📅 Расписание занятий" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="#2C3E50" VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                <ComboBox x:Name="WeekFilter" Width="150" Margin="5,0" SelectedIndex="0">
                    <ComboBoxItem Content="Эта неделя"/>
                    <ComboBoxItem Content="Следующая неделя"/>
                    <ComboBoxItem Content="Весь семестр"/>
                </ComboBox>

                <ComboBox x:Name="GroupFilter" Width="120" Margin="5,0" SelectedIndex="0">
                    <ComboBoxItem Content="Все группы"/>
                    <ComboBoxItem Content="ИВТ-21"/>
                    <ComboBoxItem Content="ПИ-21"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <!-- Расписание -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Понедельник -->
                <Border x:Name="MondayBorder"  Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock x:Name="MondayTitle" Text="Понедельник, 12 декабря" 
                                   FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#2C3E50" Margin="0,0,0,15"/>

                        <StackPanel x:Name="MondayLessons">
                            <!-- Занятия будут добавляться динамически -->
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Вторник -->
                <Border x:Name="TuesdayBorder"  Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock x:Name="TuesdayTitle" Text="Вторник, 13 декабря" 
                                   FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#2C3E50" Margin="0,0,0,15"/>

                        <StackPanel x:Name="TuesdayLessons">
                            <!-- Занятия будут добавляться динамически -->
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Среда -->
                <Border x:Name="WednesdayBorder"  Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock x:Name="WednesdayTitle" Text="Среда, 14 декабря" 
                                   FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#2C3E50" Margin="0,0,0,15"/>

                        <StackPanel x:Name="WednesdayLessons">
                            <!-- Занятия будут добавляться динамически -->
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Четверг -->
                <Border x:Name="ThursdayBorder"  Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock x:Name="ThursdayTitle" Text="Четверг, 15 декабря" 
                                   FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#2C3E50" Margin="0,0,0,15"/>

                        <StackPanel x:Name="ThursdayLessons">
                            <!-- Занятия будут добавляться динамически -->
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Пятница -->
                <Border x:Name="FridayBorder"  Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock x:Name="FridayTitle" Text="Пятница, 16 декабря" 
                                   FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#2C3E50" Margin="0,0,0,15"/>

                        <StackPanel x:Name="FridayLessons">
                            <!-- Занятия будут добавляться динамически -->
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Суббота -->
                <Border x:Name="SaturdayBorder"  Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock x:Name="SaturdayTitle" Text="Суббота, 17 декабря" 
                                   FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#2C3E50" Margin="0,0,0,15"/>

                        <StackPanel x:Name="SaturdayLessons">
                            <!-- Занятия будут добавляться динамически -->
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Экзамены -->
                <Border x:Name="ExamsBorder"  Background="#FFF3CD" 
                        BorderBrush="#FFC107" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock x:Name="ExamsTitle" Text="📝 Ближайшие экзамены" 
                                   FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#2C3E50" Margin="0,0,0,15"/>

                        <StackPanel x:Name="ExamsList">
                            <!-- Экзамены будут добавляться динамически -->
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>