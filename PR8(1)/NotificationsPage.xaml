<Page x:Class="PR8_1_.NotificationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Уведомления">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и действия -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" 
                     Margin="0,0,0,20">
            <TextBlock Text="🔔 Уведомления" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="#2C3E50" VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal">
                <Button Content="Пометить все как прочитанные" 
                        Background="Transparent" 
                        BorderBrush="#3498DB" BorderThickness="1"
                        Foreground="#3498DB" Padding="10,5"
                         FontSize="12"
                        Click="MarkAllAsRead_Click"/>
                <Button Content="⚙️" 
                        Background="Transparent" 
                        BorderThickness="0"
                        FontSize="16" Margin="10,0,0,0"
                        ToolTip="Настройки уведомлений"/>
            </StackPanel>
        </StackPanel>

        <!-- Фильтры -->
        <Border Grid.Row="1"  Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Фильтры" 
                           FontSize="16" FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>

                <WrapPanel>
                    <CheckBox Content="Учебные" IsChecked="True" Margin="0,0,15,10"/>
                    <CheckBox Content="Оценки" IsChecked="True" Margin="0,0,15,10"/>
                    <CheckBox Content="Расписание" IsChecked="True" Margin="0,0,15,10"/>
                    <CheckBox Content="Системные" IsChecked="False" Margin="0,0,15,10"/>
                    <CheckBox Content="Новости" IsChecked="True" Margin="0,0,15,10"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Список уведомлений -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Сегодня -->
                <TextBlock Text="Сегодня" 
                           FontSize="16" FontWeight="SemiBold" 
                           Foreground="#2C3E50" Margin="0,0,0,10"/>

                <!-- Уведомление 1 -->
                <Border  Margin="0,0,0,10" Background="#E8F4FD">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="#3498DB" Width="40" Height="40" 
                                CornerRadius="20" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="📚" Foreground="White" 
                                       FontSize="16"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Новое задание по математике" 
                                       FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="Добавлено новое домашнее задание по теме 'Пределы функций'. Срок сдачи: до 20 декабря." 
                                       Foreground="#666" FontSize="12" TextWrapping="Wrap"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="10:30" Foreground="#999" FontSize="11" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <Button Grid.Column="2" Content="✕" 
                                Background="Transparent" BorderThickness="0"
                                Foreground="#999" FontSize="12"
                                Width="24" Height="24" 
                                ToolTip="Удалить уведомление"
                                Click="DeleteNotification_Click"/>
                    </Grid>
                </Border>

                <!-- Уведомление 2 -->
                <Border  Margin="0,0,0,10" Background="#E8F6F3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="#27AE60" Width="40" Height="40" 
                                CornerRadius="20" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="📊" Foreground="White" 
                                       FontSize="16"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Опубликованы оценки" 
                                       FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="Профессор Иванов выставил оценки за контрольную работу по математике." 
                                       Foreground="#666" FontSize="12" TextWrapping="Wrap"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="09:15" Foreground="#999" FontSize="11" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <Button Grid.Column="2" Content="✕" 
                                Background="Transparent" BorderThickness="0"
                                Foreground="#999" FontSize="12"
                                Width="24" Height="24" 
                                ToolTip="Удалить уведомление"
                                Click="DeleteNotification_Click"/>
                    </Grid>
                </Border>

                <!-- Вчера -->
                <TextBlock Text="Вчера" 
                           FontSize="16" FontWeight="SemiBold" 
                           Foreground="#2C3E50" Margin="0,20,0,10"/>

                <!-- Уведомление 3 -->
                <Border  Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="#E74C3C" Width="40" Height="40" 
                                CornerRadius="20" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="📅" Foreground="White" 
                                       FontSize="16"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Изменение в расписании" 
                                       FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="Занятие по программированию перенесено с 14:00 на 16:00." 
                                       Foreground="#666" FontSize="12" TextWrapping="Wrap"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="Вчера, 16:45" Foreground="#999" FontSize="11" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <Button Grid.Column="2" Content="✕" 
                                Background="Transparent" BorderThickness="0"
                                Foreground="#999" FontSize="12"
                                Width="24" Height="24" 
                                ToolTip="Удалить уведомление"
                                Click="DeleteNotification_Click"/>
                    </Grid>
                </Border>

                <!-- Уведомление 4 -->
                <Border  Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="#9B59B6" Width="40" Height="40" 
                                CornerRadius="20" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="👥" Foreground="White" 
                                       FontSize="16"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Новое сообщение" 
                                       FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="Проф. Иванов: 'Жду ваше домашнее задание...'" 
                                       Foreground="#666" FontSize="12" TextWrapping="Wrap"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="Вчера, 14:20" Foreground="#999" FontSize="11" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <Button Grid.Column="2" Content="✕" 
                                Background="Transparent" BorderThickness="0"
                                Foreground="#999" FontSize="12"
                                Width="24" Height="24" 
                                ToolTip="Удалить уведомление"
                                Click="DeleteNotification_Click"/>
                    </Grid>
                </Border>

                <!-- На этой неделе -->
                <TextBlock Text="На этой неделе" 
                           FontSize="16" FontWeight="SemiBold" 
                           Foreground="#2C3E50" Margin="0,20,0,10"/>

                <!-- Уведомление 5 -->
                <Border  Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="#F39C12" Width="40" Height="40" 
                                CornerRadius="20" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="🎓" Foreground="White" 
                                       FontSize="16"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Доступен новый курс" 
                                       FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="Открыта запись на дополнительный курс 'Веб-разработка'." 
                                       Foreground="#666" FontSize="12" TextWrapping="Wrap"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="2 дн. назад" Foreground="#999" FontSize="11" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <Button Grid.Column="2" Content="✕" 
                                Background="Transparent" BorderThickness="0"
                                Foreground="#999" FontSize="12"
                                Width="24" Height="24" 
                                ToolTip="Удалить уведомление"
                                Click="DeleteNotification_Click"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>